{
  "name": "browserless-chrome",
  "version": "1.0.0",
  "description": "Chrome-as-a-service on your own hardware or in the cloud.",
  "main": "build/index.js",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf build",
    "dev": "npm run build && DEBUG=browserless/chrome node build/index.js",
    "start": "node ./build",
    "postinstall": "./scripts/get-meta.js",
    "prepush": "./scripts/prepush.sh",
    "test": "jest"
  },
  "author": "jgriffith",
  "license": "GPL-3.0",
  "dependencies": {
    "@types/node": "^8.0.39",
    "body-parser": "^1.18.2",
    "cpu-stats": "^1.0.0",
    "debug": "^3.1.0",
    "express": "^4.16.2",
    "http-proxy": "^1.16.2",
    "lodash": "^4.17.4",
    "multer": "^1.3.0",
    "puppeteer": "^1.0.0",
    "queue": "^4.4.2",
    "request": "^2.83.0",
    "rimraf": "^2.6.1",
    "typescript": "^2.4.2",
    "vm2": "^3.5.2"
  },
  "devDependencies": {
    "@types/jest": "^22.1.0",
    "husky": "^0.14.3",
    "jest": "^22.1.4",
    "node-fetch": "^1.7.3",
    "ts-jest": "^22.0.1",
    "ts-node": "^4.1.0"
  },
  "jest": {
    "mapCoverage": true,
    "coverageDirectory": "../coverage/",
    "collectCoverageFrom": [
      "**/*.ts",
      "!*.*"
    ],
    "rootDir": "src",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      ".(ts)": "<rootDir>/../node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$"
  }
}
