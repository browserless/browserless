{
  "name": "@browserless.io/browserless",
  "version": "2.38.3",
  "license": "SSPL",
  "description": "The browserless platform",
  "author": "browserless.io",
  "type": "module",
  "types": "./src/exports.ts",
  "main": "./build/exports.js",
  "exports": {
    ".": "./build/exports.js"
  },
  "bin": {
    "browserless": "./bin/browserless.js"
  },
  "scripts": {
    "bundle:rrweb": "bun scripts/bundle-rrweb.js && bun scripts/bundle-svelte-player.js",
    "build": "npm run clean && npm run bundle:rrweb && npm run build:ts && npm run install:adblock && npm run build:schemas && npm run build:devtools && npm run build:openapi",
    "build:dev": "npm run build && npm run build:function && npm run install:debugger",
    "build:devtools": "bun scripts/install-devtools.js",
    "build:function": "bun scripts/build-function.js",
    "build:schemas": "bun scripts/build-schemas.js",
    "build:openapi": "bun scripts/build-open-api.js",
    "build:ts": "tsc",
    "build:tests": "npm run build:ts && npm run build:function && npm run install:debugger",
    "clean": "bun scripts/clean.js",
    "dev": "npm run build:dev && env-cmd -f .env bun build",
    "install:adblock": "bun scripts/install-adblock.js",
    "install:debugger": "bun scripts/install-debugger.js",
    "install:browsers": "bun node_modules/playwright-core/cli.js install chromium firefox webkit msedge",
    "install:dev": "npm run install:browsers && npm run install:debugger",
    "lint": "cross-env ESLINT_USE_FLAT_CONFIG=false eslint . --ext .ts --fix",
    "prepack": "npm run build:dev",
    "prettier": "prettier '{src,functions,scripts,bin,external,.github}/**/*.{js,ts,json,yml,yaml,md}' --log-level error --write",
    "test": "npm run build:tests && cross-env DEBUG=quiet mocha",
    "coverage": "npm run build:ts && c8 --reporter=text --reporter=html --reporter=lcov cross-env DEBUG=quiet mocha",
    "start": "env-cmd -f .env bun build"
  },
  "files": [
    "assets/*",
    "bin/*",
    "build/*",
    "docker/*",
    "extensions/*",
    "external/*",
    "fonts/*",
    "scripts/*",
    "src/*",
    "static/*",
    "CHANGELOG.md",
    "tsconfig.json"
  ],
  "dependencies": {
    "@divmode/rrweb": "^0.0.39",
    "@divmode/rrweb-player": "^0.0.39",
    "@divmode/rrweb-plugin-console-record": "^0.0.39",
    "@hapi/bourne": "^3.0.0",
    "@hapi/hoek": "^11.0.4",
    "@sveltejs/vite-plugin-svelte": "^3.1.0",
    "better-sqlite3": "^11.10.0",
    "debug": "^4.4.1",
    "del": "^8.0.1",
    "file-type": "^21.3.0",
    "get-port": "^7.1.0",
    "gradient-string": "^3.0.0",
    "http-proxy": "^1.18.1",
    "joi": "^18.0.2",
    "lighthouse": "^13.0.1",
    "micromatch": "^4.0.8",
    "playwright-1.53": "npm:playwright-core@1.53.2",
    "playwright-1.54": "npm:playwright-core@1.54.2",
    "playwright-1.55": "npm:playwright-core@1.55.1",
    "playwright-1.56": "npm:playwright-core@1.56.1",
    "playwright-core": "1.57.0",
    "puppeteer-core": "24.35.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "queue": "^7.0.0",
    "svelte": "^4.2.19",
    "svelte-tiny-virtual-list": "^2.1.2",
    "systeminformation": "^5.30.5",
    "tar-fs": "^3.1.1",
    "vite": "^5.4.0"
  },
  "optionalDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/chai": "^5.2.3",
    "@types/debug": "^4.1.12",
    "@types/gradient-string": "^1.1.6",
    "@types/http-proxy": "^1.17.17",
    "@types/micromatch": "^4.0.10",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.10",
    "@types/sinon": "^21.0.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.0",
    "assert": "^2.0.0",
    "c8": "^10.1.3",
    "chai": "^6.2.2",
    "cross-env": "^10.1.0",
    "env-cmd": "^11.0.0",
    "esbuild": "^0.27.2",
    "esbuild-plugin-polyfill-node": "^0.3.0",
    "eslint": "^9.39.2",
    "extract-zip": "^2.0.1",
    "gunzip-maybe": "^1.4.2",
    "marked": "^17.0.1",
    "mocha": "^11.7.5",
    "move-file": "^3.1.0",
    "prettier": "^3.8.1",
    "sinon": "^21.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-json-schema": "^0.65.1"
  },
  "playwrightVersions": {
    "default": "playwright-core",
    "1.57": "playwright-core",
    "1.56": "playwright-1.56",
    "1.55": "playwright-1.55",
    "1.54": "playwright-1.54",
    "1.53": "playwright-1.53"
  },
  "engines": {
    "node": "24",
    "npm": "^11.7.0"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "node_modules/*",
      "static/*",
      "**.spec.ts",
      "build/*",
      ".DS_Store",
      ".no-git/*",
      "*.log"
    ],
    "rules": {
      "semi": [
        2,
        "always"
      ],
      "no-async-promise-executor": 0,
      "@typescript-eslint/ban-ts-comment": 0,
      "@typescript-eslint/no-var-requires": 0,
      "sort-imports": [
        "error",
        {
          "ignoreCase": false,
          "ignoreDeclarationSort": false,
          "ignoreMemberSort": false,
          "memberSyntaxSortOrder": [
            "none",
            "all",
            "multiple",
            "single"
          ],
          "allowSeparatedGroups": true
        }
      ]
    }
  },
  "mocha": {
    "extension": [
      "js"
    ],
    "loader": "ts-node/esm",
    "spec": "build/**/*.spec.js",
    "timeout": 45000,
    "slow": 5000
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 80
  }
}
